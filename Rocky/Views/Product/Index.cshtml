@model IEnumerable<Rocky.Models.Product>

<div class="container">
	<div class="row pb-4">
		<div class="col-6 text-primary">
			<h2>Product List</h2>
		</div>
		<div class="col-6 text-right">
			<a class="btn btn-primary text-light" asp-action="Upsert">
				<i class="fas fa-plus"></i> &nbsp; Create New Product</a>
		</div>
	</div>
	@if(Model.Count()>0)
	{
		<table class="table table-bordered table-striped text-center w-100">
		<thead>
			<tr>
				<th>Product Name</th>
				<th>Price</th>
				<th>Category</th>
				<th>Application Type</th>
			</tr>
		</thead>
		<tbody>
			@foreach(var item in Model)
			{
				<tr>
				<td width="30%">
					@item.Name
				</td>
				<td width="10%">
					@item.Price
				</td>
				<td width="20%">
					@item.Category.Name
				</td>
				<td width="20%">
					@item.ApplicationType.Name
				</td>
				<td class="text-center">
					<div class="btn-group" role="group">
			             <a class="btn btn-primary mx-1" asp-route-Id="@item.Id" asp-action="Upsert">
							 <i class="fas fa-edit"></i></a>
			             <a class="btn btn-danger mx-1" asp-route-Id="@item.Id" asp-action="Delete">
							 <i class="fas fa-trash-alt"></i></a>
					</div>
				</td>
				</tr>
			}
		</tbody>
		</table>
	}
	else
	{
		<p class="text-danger">
			No Product exists.
		</p>
	}

</div>



