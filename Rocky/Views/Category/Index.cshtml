@model IEnumerable<Rocky.Models.Category>

<div class="container">
	<div class="row pb-4">
		<div class="col-6 text-primary">
			<h2>Category List</h2>
		</div>
		<div class="col-6 text-right">
			<a class="btn btn-primary text-light" asp-controller="Category" asp-action="Create"><i class="fas fa-plus"></i> &nbsp; 
				Create New List</a>
		</div>
	</div>
	@if(Model.Count()>0)
	{
		<table class="table table-bordered table-striped text-center w-100">
		<thead>
			<tr>
				<th>Category Name</th>
				<th>Display Order</th>
			</tr>
		</thead>
		<tbody>
			@foreach(var item in Model)
			{
				<tr>
				<td width="50%">
					@item.Name
				</td>
				<td width="30%">
					@item.DisplayOrder
				</td>
				<td class="text-center">
					<div class="btn-group" role="group">
			             <a class="btn btn-primary mx-1" asp-controller="Category" asp-route-Id="@item.Id" asp-action="Edit">
							 <i class="fas fa-edit"></i></a>
			             <a class="btn btn-danger mx-1" asp-controller="Category" asp-route-Id="@item.Id" asp-action="Delete">
							 <i class="fas fa-trash-alt"></i></a>
					</div>
				</td>
				</tr>
			}
		</tbody>
		</table>
	}
	else
	{
		<p class="text-danger">
			No Category exists.
		</p>
	}

</div>

